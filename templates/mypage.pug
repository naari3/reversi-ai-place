doctype html
html(lang="ja")
  head
    meta(charset="utf-8")
    style(src="css/style.css")
    title Pugテスト
  body
    h1.sitettl マイページ
    main.main
      h2.content_ttl メインタイトル
      .hello ようこそ、#{user.name if user else "ゲスト"}さん
      form(action="/mypage", method='POST')
        !=xsrf_form_html()
        button(type="submit") get token
      h3 アクセストークン
        div.token
          p #{access_token.access_token if access_token else ""}
      h3 リフレッシュトークン
        div.refresh
          p #{access_token.refresh_token if access_token else ""}
